{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "../",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "../src/**/*.ts",
        "../src/**/*.tsx",
        "../types.d.ts",
        "../next-env.d.ts"
    ],
    "exclude": [
        "../node_modules",
        "../.next",
        "../out"
    ]
}